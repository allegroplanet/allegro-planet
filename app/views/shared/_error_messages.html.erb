<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="box yellow">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <div class="box yellow">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
